<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PrimerNivel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/moves"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/patua_one"
            android:gravity="center"
            android:text="Movimientos: 0"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tiempo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/patua_one"
            android:gravity="center"
            android:text="Tiempo: 00:00:00"
            android:textColor="@color/black" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        android:onClick="clickear">

        <Button
            android:id="@+id/btnUno"
            style="@style/ButtonStyle1"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="@color/boton"
            android:onClick="clickear"
            android:tag="00"
            android:text="1" />

        <Button
            android:id="@+id/btnDos"
            style="@style/ButtonStyle1"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnUno"
            android:onClick="clickear"
            android:tag="01"
            android:text="2" />

        <Button
            android:id="@+id/btnTres"
            style="@style/ButtonStyle1"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnDos"
            android:onClick="clickear"
            android:tag="02"
            android:text="3" />

        <Button
            android:id="@+id/btnCuatro"
            style="@style/ButtonStyle1"
            android:layout_below="@+id/btnUno"
            android:layout_alignParentStart="true"
            android:onClick="clickear"
            android:tag="10"
            android:text="4" />

        <Button
            android:id="@+id/btnCinco"
            style="@style/ButtonStyle1"
            android:layout_below="@+id/btnUno"
            android:layout_toEndOf="@+id/btnUno"
            android:onClick="clickear"
            android:tag="11"
            android:text="5" />

        <Button
            android:id="@+id/btnSeis"
            style="@style/ButtonStyle1"
            android:layout_below="@+id/btnUno"
            android:layout_toEndOf="@+id/btnDos"
            android:onClick="clickear"
            android:tag="12"
            android:text="6" />

        <Button
            android:id="@+id/btnSiete"
            style="@style/ButtonStyle1"
            android:layout_below="@+id/btnCuatro"
            android:layout_alignParentStart="true"
            android:onClick="clickear"
            android:tag="20"
            android:text="7" />

        <Button
            android:id="@+id/btnOcho"
            style="@style/ButtonStyle1"
            android:layout_below="@+id/btnCuatro"
            android:layout_toEndOf="@+id/btnUno"
            android:onClick="clickear"
            android:tag="21"
            android:text="8" />

        <Button
            android:id="@+id/btnNueve"
            style="@style/ButtonStyle1"
            android:layout_below="@+id/btnCuatro"
            android:layout_toEndOf="@+id/btnDos"
            android:background="@color/colorBtnLibre"
            android:onClick="clickear"
            android:tag="22"
            android:text="9" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85sp"
            android:layout_marginTop="565dp"
            android:layout_marginRight="100sp"
            android:layout_weight="1"
            android:backgroundTint="@color/boton"
            android:fontFamily="@font/patua_one"
            android:onClick="volver"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Volver"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="bottom"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnReiniciar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/boton"
            android:fontFamily="@font/patua_one"
            android:text="Reiniciar"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPausar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/boton"
            android:fontFamily="@font/patua_one"
            android:text="Pausar"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>